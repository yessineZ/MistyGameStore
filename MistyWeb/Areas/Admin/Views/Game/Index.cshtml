@model List<Game>
<partial name="_notifications" />
@if(TempData["success"]!=null) {
	<h1>@TempData["success"]</h1>
}




<div class="container">
	<div class="row pt-4 pb-2">
		<div class="col-12">
			<h2 class="text-primary">
				Games List
			</h2>
		</div>
		<div class="col-6" text-end>
			<a asp-controller="Game" asp-action="Upsert" class="btn btn-primary">
			<i class="bi bi-search"></i> Create New game
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Titlee
			</th>

			<th>
				Author
			</th>

			<th>
				Description
			</th>

			<th>
				Price
			</th>

			<th>
				ISBN
			</th>


			<th>
				Category
			</th>

		</tr>
	</thead>

	<tbody>
		@foreach(var i in Model.OrderBy(u=>u.Price)){
			<tr>
				<td>
					@i.Title 
				</td>

				<td>
					 @i.Author 
					 
				</td>


				<td>
					@i.Description

				</td>

				<td>
					@i.Price$

				</td>


				<td>
					@i.ISBN

				</td>

				<td>
					@i.Category.Name

				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="game" asp-action="Upsert" asp-route-id="@i.Id" class="btn btn-primary mx-2"><i class="fa-sharp fa-thin fa-pen"></i>Edit</a>
						<a asp-controller="game" asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger mx-2"><i class="fa-thin fa-trash"></i>Delete</a>
					</div>
				</td>

			</tr>
		}
		
	</tbody>
	




</table>